<!DOCTYPE html>
<html>
<head>
  <title>LGU Bus Tracker</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script src="//maps.google.com/maps/api/js?key=AIzaSyCnIKD3Bm7FZnhmfIyKh79WxuxSu4YXfUE&libraries=places"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <script src='//underscorejs.org/underscore-min.js' type='text/javascript'></script>

</head>

<body class="nav-md">
  <div class="container body">
    <div class="main_container">
      <%= render 'layouts/sidebar' %>
      <%= render 'layouts/navbar' %>

      <div class="right_col" role="main" style="min-height: 1704px;">
        <% if notice %>
          <div class="alert alert-info"><%= notice %></div>
        <% end %>
        <% if alert %>
          <div class="alert alert-warning"><%= alert %></div>
        <% end %>
        <%= yield %>
      </div>

      <%= render 'layouts/footer' %>
    </div>
  </div>
</body>
</html>
