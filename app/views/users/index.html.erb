<% @user.each do |users| %>
  <ul class="listing">
   <div class="row">
    <div class="well col-md-4 col-md-offset-4">
     <li><%= link_to gravatar_for(users), users_path(users) %></li>
     <li class="user-title"><%= link_to users.name.capitalize, users_path(users)%></li>
     <li><%= link_to "delete this user", users_path(users), method: :delete, 
        data: {confirm: "are you sure you want to delete the user and its associations?"} %></li>
    </div>
   </div>
  </ul>
  <% end %> 
</div> 
                                                                  
