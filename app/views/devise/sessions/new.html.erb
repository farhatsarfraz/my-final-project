<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
         <div class="panel-heading">
            <div class="row-fluid user-row">
              <%= image_tag 'admin-icon.svg', alt:"Admin", class: "img-responsive admin-icon-img" %>
              <p class="form-title"> LGU Admin Sign In </p>
            </div>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name) , html: {class: "form-signin"} ) do |f| %>
              <fieldset>
                <% flash.each do |key, value| %>
                  <div class="flash <%= key %>"><%= value %></div>
                <% end %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", id: "username", class: "form-control" %>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", id: "password", class: "form-control" %>

                <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block", value: "Sign In", id: "login" %>
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                <% end -%>
              </fieldset>
            <% end %>
          </div>

      </div>
    </div>
  </div>
</div>








