<%= link_to "Create a new Stop", new_stop_path, class: "btn btn-xlarge btn-primary" %>
<h1 align="center">Stops Information</h1>
<% if @stops.present? %>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Latitude</th>
        <th scope="col">Longitude</th>
      </tr>
    </thead>
    <tbody>
      <% @stops.each_with_index do |stop, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= stop.name %></td>
          <td><%= stop.latitude %></td>
          <td><%= stop.longitude %></td>
        </tr>
      <% end %>
    <tbody>
  </table>
<% end %>
