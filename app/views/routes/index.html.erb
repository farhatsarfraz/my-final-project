<h1>List of all routes</h1>
<% @routes.each do |routes| %>
<div class="row">
    <div class="col-md-2">
        <section class="center">
        
        </section>
    </div>
    <div class="col-md-8 well">
        <p>
            <h2>Source: <%= routes.source %></h2>
            <h2>Destination: <%= routes.destination %></h2>
            <h2>Distance: <%= routes.distance %></h2>
        </p>
        <div class="route-actions">
            <%= link_to "edit the route", edit_route_path(@routes), class: "btn btn-xs btn-primary" %>
            <%= link_to "delete the route", route_path(@routes), method: :delete, data: {confirm: "are yor sure?"}, class: "btn btn-xs btn-danger" %>      
            
        </div>
    </div>
</div>
<% end %>

